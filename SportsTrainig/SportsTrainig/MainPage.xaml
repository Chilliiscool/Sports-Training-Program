<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:SportsTraining.Models"
    x:Class="SportsTraining.Pages.MainPage"
    Title="Today's Program">

    <StackLayout Padding="20" Spacing="15">
        <Image x:Name="LogoImage"
               Source="etpa_logo.png"
               HeightRequest="80"
               HorizontalOptions="Center"
               IsVisible="False"/>

        <ActivityIndicator x:Name="LoadingIndicator"
                           IsVisible="False"
                           IsRunning="False"
                           HorizontalOptions="Center" />

        <Label Text="Program"
               FontSize="22"
               FontAttributes="Bold"
               TextColor="{AppThemeBinding Light=Black, Dark=White}" />

        <ListView x:Name="ProgramsListView"
                  ItemSelected="ProgramsListView_ItemSelected"
                  IsVisible="False"
                  SeparatorVisibility="Default">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:ProgramSession">
                    <TextCell Text="{Binding SessionTitle}" 
                              TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
