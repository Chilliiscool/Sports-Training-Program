<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SportsTraining.Pages.SessionDetailPage"
             Title="Session Details">

    <StackLayout Padding="20" Spacing="10">
        <Label x:Name="SessionTitleLabel" FontSize="22" FontAttributes="Bold" />
        <ScrollView>
            <StackLayout x:Name="SessionContentStack" />
        </ScrollView>
        <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>
