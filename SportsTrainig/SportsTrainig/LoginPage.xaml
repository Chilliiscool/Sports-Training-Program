Description: UI page for the LoginPage.-->
    <ContentPage
    x:Class="SportsTraining.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Login">

    <StackLayout Padding="30" Spacing="20">
        <Label Text="Email" />
        <Entry x:Name="emailEntry" Placeholder="Enter your email" Keyboard="Email" />

        <Label Text="Password" />
        <Grid>
            <Entry x:Name="passwordEntry"
                   Placeholder="Enter your password"
                   IsPassword="True"
                   HorizontalOptions="FillAndExpand" />
            <ImageButton x:Name="passwordToggleBtn"
                         Source="eye_closed_dark.png"
                         HorizontalOptions="End"
                         VerticalOptions="Center"
                         BackgroundColor="Transparent"
                         WidthRequest="30"
                         HeightRequest="30"
                         Margin="0,0,5,0"
                         Clicked="OnPasswordToggleClicked" />
        </Grid>

        <Button x:Name="loginButton" Text="Login" Clicked="OnLoginClicked" />

        <Label x:Name="statusLabel" TextColor="Red" FontSize="Small" />
    </StackLayout>
</ContentPage>
