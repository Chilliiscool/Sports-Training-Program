<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SportsTraining.Pages.SettingsPage"
             Title="Settings">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Label Text="Settings" FontSize="28" FontAttributes="Bold" />

            <!-- Settings buttons -->
            <Button Text="Account Settings" Clicked="OnAccountSettingsClicked" />
            <Button Text="Edit Profile" Clicked="OnEditProfileClicked" />
            <Button Text="Change Password" Clicked="OnChangePasswordClicked" />
            <Button Text="Training Preferences" Clicked="OnTrainingPreferencesClicked" />
            <Button Text="Goals" Clicked="OnGoalsClicked" />
            <Button Text="Units" Clicked="OnUnitsClicked" />
            <Button Text="Notifications" Clicked="OnNotificationsClicked" />
            <Button Text="Enable/Disable" Clicked="OnToggleFeatureClicked" />
            <Button Text="App Settings" Clicked="OnAppSettingsClicked" />
            <Button Text="Offline Mode" Clicked="OnOfflineModeClicked" />
            <Button Text="Light/Dark Mode" Clicked="OnThemeToggleClicked" />
            <Button Text="Language" Clicked="OnLanguageClicked" />
            <Button Text="Privacy Permissions" Clicked="OnPrivacyClicked" />
            <Button Text="Support" Clicked="OnSupportClicked" />
            <Button Text="FAQ" Clicked="OnFaqClicked" />
            <Button Text="Report Issue" Clicked="OnReportIssueClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
