<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="SportsTraining.Popups.VideoPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <Grid Padding="0" RowDefinitions="Auto,*" BackgroundColor="#000000">
        <!-- Header -->
        <Grid Grid.Row="0" Padding="12" ColumnDefinitions="*,Auto" BackgroundColor="#111111">
            <!-- This must exist because your code uses TitleText -->
            <Label x:Name="TitleText"
                   Text="Video"
                   TextColor="White"
                   FontSize="18"
                   FontAttributes="Bold"
                   VerticalTextAlignment="Center" />
            <Button Grid.Column="1"
                    Text="âœ•"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="16"
                    Clicked="OnCloseClicked" />
        </Grid>

        <!-- Body -->
        <Grid Grid.Row="1" Padding="0">
            <!-- This must be named Player so your code-behind can access it -->
            <toolkit:MediaElement x:Name="Player"
                                  ShouldAutoPlay="True"
                                  ShouldShowPlaybackControls="True"
                                  Aspect="AspectFit" />
        </Grid>
    </Grid>
</toolkit:Popup>
