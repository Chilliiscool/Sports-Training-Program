<?xml version="1.0" encoding="UTF-8" ?>
<Shell
   x:Class="SportsTraining.AppShell"
   xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
   xmlns:pages="clr-namespace:SportsTraining.Pages"
   Shell.FlyoutBehavior="Disabled"
   Title="SportsTraining">
    <Shell.TitleView>
        <HorizontalStackLayout Spacing="10" Padding="10" VerticalOptions="Center">
            <Label Text="Settings" FontSize="22" VerticalOptions="Center" />
            <Image Source="default_logo.png" HeightRequest="50" />
            <Image x:Name="LogoImage" Source="etpa_logo.png" HeightRequest="50" IsVisible="False" />
        </HorizontalStackLayout>
    </Shell.TitleView>

    <TabBar>
        <ShellContent
           Title="Home"
           Icon="home.png"
           ContentTemplate="{DataTemplate pages:MainPage}"
           Route="MainPage" />

        <ShellContent
           Title="Training"
           Icon="training.png"
           ContentTemplate="{DataTemplate pages:TrainingPage}"
           Route="TrainingPage" />

        <ShellContent
           Title="Progress"
           Icon="progress.png"
           ContentTemplate="{DataTemplate pages:ProgressPage}"
           Route="ProgressPage" />

        <ShellContent
           Title="Settings"
           Icon="settings.png"
           ContentTemplate="{DataTemplate pages:SettingsPage}"
           Route="SettingsPage" />
    </TabBar>

</Shell>
